{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "next",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-duplicate-case": "error", // this will turn off a rule
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-func-assign": "error",
    "indent": [
      "warn",
      "tab"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "env": {
    "browser": true
  }
}